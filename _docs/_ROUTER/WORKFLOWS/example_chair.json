{
  "name": "chair_workflow",
  "description": "Creates a simple chair with seat, back support and four legs",
  "category": "furniture",
  "author": "blender-ai-mcp",
  "version": "2.0.0",

  "trigger_pattern": null,
  "trigger_keywords": ["chair", "seat", "stool", "armchair"],

  "sample_prompts": [
    "create a chair",
    "make a wooden chair",
    "model a seat with legs",
    "build a simple stool",
    "design an office chair",
    "zrob krzeslo",
    "stworz fotel",
    "erstelle einen Stuhl",
    "creer une chaise"
  ],

  "steps": [
    {
      "tool": "modeling_create_primitive",
      "params": {"type": "CUBE"},
      "description": "Create seat base"
    },
    {
      "tool": "modeling_transform_object",
      "params": {
        "scale": [0.45, 0.45, 0.05],
        "location": [0, 0, 0.45]
      },
      "description": "Scale and position seat"
    },
    {
      "tool": "system_set_mode",
      "params": {"mode": "EDIT"},
      "description": "Enter edit mode for beveling",
      "condition": "current_mode != 'EDIT'"
    },
    {
      "tool": "mesh_select",
      "params": {"action": "all"},
      "description": "Select all geometry",
      "condition": "not has_selection"
    },
    {
      "tool": "mesh_bevel",
      "params": {
        "width": "$AUTO_BEVEL_SMALL",
        "segments": 2
      },
      "description": "Bevel seat edges"
    },
    {
      "tool": "system_set_mode",
      "params": {"mode": "OBJECT"},
      "description": "Return to object mode",
      "condition": "current_mode != 'OBJECT'"
    },
    {
      "tool": "modeling_create_primitive",
      "params": {"type": "CUBE"},
      "description": "Create back support"
    },
    {
      "tool": "modeling_transform_object",
      "params": {
        "scale": [0.45, 0.05, 0.4],
        "location": [0, -0.2, 0.7]
      },
      "description": "Scale and position back support"
    },
    {
      "tool": "modeling_create_primitive",
      "params": {"type": "CUBE"},
      "description": "Create front-left leg"
    },
    {
      "tool": "modeling_transform_object",
      "params": {
        "scale": [0.04, 0.04, 0.45],
        "location": [0.2, 0.2, 0.225]
      },
      "description": "Position front-left leg"
    },
    {
      "tool": "modeling_create_primitive",
      "params": {"type": "CUBE"},
      "description": "Create front-right leg"
    },
    {
      "tool": "modeling_transform_object",
      "params": {
        "scale": [0.04, 0.04, 0.45],
        "location": [-0.2, 0.2, 0.225]
      },
      "description": "Position front-right leg"
    },
    {
      "tool": "modeling_create_primitive",
      "params": {"type": "CUBE"},
      "description": "Create back-left leg"
    },
    {
      "tool": "modeling_transform_object",
      "params": {
        "scale": [0.04, 0.04, 0.45],
        "location": [0.2, -0.2, 0.225]
      },
      "description": "Position back-left leg"
    },
    {
      "tool": "modeling_create_primitive",
      "params": {"type": "CUBE"},
      "description": "Create back-right leg"
    },
    {
      "tool": "modeling_transform_object",
      "params": {
        "scale": [0.04, 0.04, 0.45],
        "location": [-0.2, -0.2, 0.225]
      },
      "description": "Position back-right leg"
    },
    {
      "tool": "modeling_join_objects",
      "params": {},
      "description": "Join all parts into single object"
    }
  ]
}
